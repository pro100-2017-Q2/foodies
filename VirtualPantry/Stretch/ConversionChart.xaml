<Window x:Class="VirtualPantry.Stretch.ConversionChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualPantry.Stretch"
        mc:Ignorable="d"
        Title="ConversionChart" Height="463.961" Width="642.407">
    <Grid>
        <Button
                x:Name="homeButton"
                Content="Home"
                Click="homeButton_Click" 
            Margin="10,10,574,404"
            Width="50"
            Height="20"/>
        <Grid x:Name="OriginalAmount">
            <TextBox x:Name="OriginalAmountLabel" x:FieldModifier="private" Margin="183,152,417,260" Width="34" Text="0"/>
            <Button x:Name="OriginalAmountUpButton" x:FieldModifier="private" Margin="222,152,397,260" Content="^" Width="15"/>
            <Button x:Name="OriginalAmountDownButton" x:FieldModifier="private" Margin="242,152,379,260"  Content="v" Width="13"/>
            <Label Content="Amount" HorizontalAlignment="Left" Margin="183,80,0,0" VerticalAlignment="Top"/>
            <Label Content="Units" HorizontalAlignment="Left" Margin="413,80,0,0" VerticalAlignment="Top"/>
            <Label Content="=" HorizontalAlignment="Left" Margin="310,200,0,0" VerticalAlignment="Top"/>
        </Grid>
        <ListBox x:Name="OriginalUnitsBox" FontSize="8" HorizontalAlignment="Left" Height="94" Margin="399,126,0,0" VerticalAlignment="Top" Width="71">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Path=Units, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label x:Name="ConvertedAmount" FontSize="20" Content="###" Margin="184,259,396,137"/>

        <ListBox x:Name="ConvertedUnitsBox" FontSize="8" HorizontalAlignment="Left" Height="94" Margin="399,233,0,0" VerticalAlignment="Top" Width="71">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Path=Units, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
