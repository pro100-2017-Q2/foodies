<Window x:Class="VirtualPantry.Stretch.ConversionChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualPantry.Stretch"
        mc:Ignorable="d"
        Title="ConversionChart" Height="300" Width="300">
    <Grid>
        <Button
                x:Name="homeButton"
                Content="Home"
                Click="homeButton_Click" 
            Margin="10,10,236.6,234.4"/>
        <Grid x:Name="OriginalAmount">
            <TextBox x:Name="OriginalAmountLabel" x:FieldModifier="private" Margin="74,62,184,189" Width="34" Text="0"/>
            <Button x:Name="OriginalAmountUpButton" x:FieldModifier="private" Margin="113,62,164,189" Content="^" Width="15"/>
            <Button x:Name="OriginalAmountDownButton" x:FieldModifier="private" Margin="128,62,151,189"  Content="?" Width="13"/>
            <Label Content="Amount" HorizontalAlignment="Left" Margin="75,25,0,0" VerticalAlignment="Top"/>
            <Label Content="Units" HorizontalAlignment="Left" Margin="181,25,0,0" VerticalAlignment="Top"/>
            <Label Content="=" HorizontalAlignment="Left" Margin="123,121,0,0" VerticalAlignment="Top"/>
        </Grid>
        <ListBox x:Name="OriginalUnitsBox" FontSize="8" HorizontalAlignment="Left" Height="94" Margin="167,54,0,0" VerticalAlignment="Top" Width="71">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Path=Units, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label x:Name="ConvertedAmount" FontSize="20" Content="###" Margin="71,163,154,65"/>

        <ListBox x:Name="ConvertedUnitsBox" FontSize="8" HorizontalAlignment="Left" Height="94" Margin="167,153,0,0" VerticalAlignment="Top" Width="71">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Path=Units, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
