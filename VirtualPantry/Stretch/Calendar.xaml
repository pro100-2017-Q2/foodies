<Window x:Class="VirtualPantry.Stretch.Calendar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualPantry.Stretch"
        mc:Ignorable="d"
        Title="Calendar" Height="300" Width="300">
    <StackPanel Background="Blue">
        
        <Button x:Name="homeButton"
                Background="Aqua"
                Content="Home"
                Height="27"
                Click="homeButton_Clicked" 
                Margin="0,0,231.6,0"/>
        
        <Calendar VerticalAlignment="Bottom"
                  Background="PowderBlue"
              Margin="40,40,39.6,40"
              SelectionMode="SingleDate"/>
    </StackPanel>
</Window>
